<%= form_with(model: @user, local: true) do |f| %>
    
        <div class="center-title">
            <h1 class="form-title">Registro</h1>
        </div>
        <%= render 'shared/error_messages' %>
        <div class="field" >
            <%= f.label :name, "Nombre", class: "label" %>
            <div class="control">
                <%= f.text_field :name, class: 'input', placeholder: "Escribe" %>
            </div>
        </div>

        <div class="field">
            <%= f.label :email, "Correo Electronico", class: "label" %>
            <%= f.email_field :email, class: 'input', placeholder: "Escribe"%>
        </div>

        <div class="field">
            <%= f.label :password, "ContraseÃ±a", class: "label" %>
            <%= f.password_field :password, class: 'input', placeholder: "Escribe" %>
        </div>

        <div class="field">
            <%= f.label :password_confirmation, "Confirmacion", class: "label" %>
            <%= f.password_field :password_confirmation, class: 'input', placeholder: "Escribe" %>
        </div>
        
        <%= f.submit yield(:button_text), class: "button signup-btn long-btn" %>
<% end %>
